{
  "appId": "com.julian-christmann.minimago",
  "productName": "Minimago",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "**/node_modules/sharp/**/*",
    "**/node_modules/@img/**/*"
  ],
  "extraResources": [
    "src/assets/**"
  ],
  "icon": "./desktopIcon.png",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  }
}